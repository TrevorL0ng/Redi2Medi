<p>Don't ever forget to take your pill with our REDI2MEDI APP</p>
{{#if error}}
    <p><strong>{{error}}</strong></p>
{{/if}}
<form method="post" action="/schedule">
    <div>
        <label>Your name:</label>
        <br />
        <input type="text" name="name" value="{{name}}" />
    </div>
    <div>
        <label>Your medication information</label>
        <br />
        <input type="text" name="medication" value="{{medication}}" />
    </div>
    <div>
        <label>Name your reminder:</label>
        <br />
        <input type="text" name="remname" value="{{remname}}" />        
    </div>
    <div>
        <label>Date and Time:</label>
        <br />
        <input type="date" name="date" value="{{date}}" />
        <input type="time" name="time" value="{{time}}" />
    </div>
    <div>
        <button type="submit">Create a reminder</button>
    </div>
</form>